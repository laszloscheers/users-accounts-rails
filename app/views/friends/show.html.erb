<p style="color: green"><%= notice %></p>
<table class="table table-striped table-bordered">
  <thead class="table-dark">
    <tr >
      <th scope="col">First name</th>
      <th scope="col">Last name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">Twitter</th>
      <th scope="col">User Id</th>
      <th colspan="2" ></th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <%= render @friend %>
        <td><%= link_to "Edit this friend", edit_friend_path(@friend), class: "btn btn-secondary" %></td>
        <td><%= button_to "Destroy this friend", @friend, method: :delete, class: "btn btn-secondary" %></td>
      </tr>
  </tbody>
</table>

<div>
  <%= link_to "Back to friends", friends_path, class: "btn btn-secondary" %>
</div>
